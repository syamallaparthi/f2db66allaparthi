extends layout

block content
  h1= title
  - let fuels = results
  div(class = "container-fluid")
   div(class = "row")
    each item, index in fuels
     div.col-sm-2(onclick=`buy(${index})`) Category: #{item["Category"]} <br> Color: #{item["Color"]} <br> Quantity: #{item["Quantity"]}

  script. 
    function buy(index) {
        alert("You purchased item " + index + ".")
    } 