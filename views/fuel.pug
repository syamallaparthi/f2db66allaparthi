extends layout

block content
  h1= title
  - let fuels = results
  button.btn(class="btn-info ml-1", style="margin: 5px; width: 130px;" onclick=`dispatch(\"/fuel/create")`) Create
  div(class = "container-fluid")
   div(class = "row m-1")
    each item, index in fuels
     - let destination = `dispatch(\"/fuel/update?id=${item._id}\")`
     div(class="row-sm-2", class="m-1") Item #{item.Category}(#{item.Quantity}) is #{item.Color}
     button.btn( class="btn-primary ml-1", style="margin: 5px; width: 130px;" , onclick= destination) Update 
     button.btn(class="btn-info ml-1", style="margin: 5px; width: 130px;" onclick=`dispatch(\"/fuel/detail?id=${item._id}\")`) View 
     button.btn(class="btn-warning ml-1", style="margin: 5px; width: 130px;" onclick= `dispatch(\"/fuel/delete?id=${item._id}\")`) Delete

  script. 
    function dispatch(path){ 
    window.location.href=path 
    } 